<?xml version="1.0"?>
<config>
    <modules>
        <KL_BackInStock>
            <version>0.0.1</version>
        </KL_BackInStock>
    </modules>
    <global>
        <blocks>
            <backinstock>
                <class>KL_BackInStock_Block</class>
            </backinstock>
        </blocks>
        <models>
            <backinstock>
                <class>KL_BackInStock_Model</class>
            </backinstock>
            <productalert>
                <rewrite>
                    <observer>KL_BackInStock_Model_Observer</observer>
                </rewrite>
            </productalert>
        </models>
        <helpers>
            <backinstock>
                <class>KL_BackInStock_Helper</class>
            </backinstock>
        </helpers>
        <resources>
            <backinstock_setup>
                <setup>
                    <module>KL_BackInStock</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </backinstock_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <backinstock>
                <use>standard</use>
                <args>
                    <module>KL_BackInStock</module>
                    <frontName>backinstock</frontName>
                </args>
            </backinstock>
        </routers>
        <layout>
            <updates>
                <backinstock>
                    <file>backinstock.xml</file>
                </backinstock>
            </updates>
        </layout>
    </frontend>
</config>